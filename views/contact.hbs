<main>
    <section class="py-6 lg:pt-16">
        <div class="container max-w-md">
            <h2 class="tracking-wide text-2xl text-center mb-6">Get in touch with us</h2>
            {{> errors}}

            {{#if successMsg}}<p class="text-center text-green-600">{{successMsg}}</p>{{/if}}
            
            <form method="POST" class="capitalize mt-4" action="/contact" >
                <ul>
                    <li class="relative border-b focus-within:border-gray-800">
                        <label for="name" class="block absolute top-2 left-2 text-sm">Name</label>
                        <input type="text" id="name" name="name" autocomplete="off" value="{{#if name}}{{{name}}}{{/if}}"
                        class="block rounded pt-8 pb-2 px-2 w-full outline-none focus:bg-gray-50">
                    </li>

                    <li class="relative border-b focus-within:border-gray-800">
                        <label for="email" class="block absolute top-2 left-2 text-sm">Email</label>
                        <input type="email" id="email" name="email" autocomplete="off" value="{{#if email}}{{{email}}}{{/if}}"
                        class="block pt-8 pb-2 px-2 w-full outline-none focus:bg-gray-50">
                    </li>

                    <li class="relative border-b focus-within:border-gray-800">
                        <label for="msg" class="block absolute top-2 left-2 text-sm">Your message</label>
                        <textarea name="message" id="msg" cols="30" rows="10" 
                        class="block pt-8 pb-2 px-2 w-full min-h-full max-h-60 outline-none focus:bg-gray-50">{{#if message}}{{{message}}}{{/if}}</textarea>
                    </li>

                    <li><input type="hidden" name="_csrf" value="{{csrfToken}}"></li>
                    
                    <li class="text-center">
                        <input type="submit" name="contact-btn" value="Submit" class="inline mt-5 bg-transparent border border-gray-800 text-gray-800 font-semibold hover:bg-gray-700 hover:text-white py-2 px-4 rounded">
                    </li>
                </ul>
            </form>
        </div>
    </section>
</main>
