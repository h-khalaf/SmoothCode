<main>
    <div class="container max-w-2xl py-6">
        <h1 class="border-b text-2xl pb-2 mb-2 text-center">Click on the button below to add hljs languages</h1>
        {{> errors}}
        <form method="POST" class="mt-4 capitalize text-center" action="/language/hljs" >
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="submit" value="Confirm" class="rounded inline mt-5 bg-green-500 text-white font-semibold hover:bg-green-700 py-2 px-4">
        </form>
    </div>
</main>
