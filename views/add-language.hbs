<main>
    <div class="container max-w-2xl py-6">
        <h1 class="border-b text-2xl pb-2 mb-2">Add a new language</h1>
        {{> errors}}
        <form method="POST" class="mt-4 capitalize" action="/add-language" >
            <ul> 
                <li class="relative border-b focus-within:border-green-400">
                    <label for="language" class="block absolute top-2 left-2 text-sm">language <span class="text-xs normal-case">(make sure it is compatible with hljs)</span></label>
                    <input type="text" id="language" name="language" autocomplete="off" required 
                    class="block pt-8 pb-2 px-2 w-full outline-none focus:bg-gray-50"
                    {{#if language}}value="{{language}}"{{/if}}>
                </li>

                <li><input type="hidden" name="_csrf" value="{{csrfToken}}"></li>
                
                <li class="text-center">
                    <input type="submit" value="Add language" class="rounded inline mt-5 bg-green-500 text-white font-semibold hover:bg-green-700 py-2 px-4">
                </li>
            </ul>
        </form>
    </div>
</main>
