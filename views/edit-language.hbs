<main>
    <div class="container max-w-2xl py-6">
        <h1 class="border-b text-2xl pb-2 mb-2">Edit Language</h1>
        {{> errors}}
        <form method="POST" class="mt-4 capitalize" action="/language/edit" >
            <ul> 
                <li class="relative border-b focus-within:border-blue-400">
                    <label for="languageName" class="block absolute top-2 left-2 text-sm">Language</label>
                    <input type="text" id="languageName" name="languageName" autocomplete="off" required
                    class="block pt-8 pb-2 px-2 w-full outline-none focus:bg-gray-50" value="{{language.name}}">
                </li>

                <li><input type="hidden" name="languageId" value="{{language.id}}"></li>

                <li><input type="hidden" name="_csrf" value="{{csrfToken}}"></li>
                
                <li class="text-center">
                    <input type="submit" value="Edit" class="rounded inline mt-5 bg-blue-500 text-white font-semibold hover:bg-blue-700 py-2 px-4">
                </li>
            </ul>
        </form>
    </div>
</main>
