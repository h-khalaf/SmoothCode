<main>
    <div class="container py-6">
        {{> errors}}
        <section>
            {{#if isLoggedIn}}
            <header class="p-2 mb-2 border-b flex flex-wrap justify-between items-center">
                <h1 class="text-2xl md:text-4xl mb-2 inline">{{folder.name}}</h1>
                <span>
                    <a href="/folder/edit/{{folder.id}}" class="rounded p-2 mr-1 bg-blue-500 text-white">Edit</a>
                    <a href="/folder/delete/{{folder.id}}" class="rounded p-2 mr-1 bg-red-500 text-white">Delete</a>
                </span>
            </header>
            {{else}}
            <h1 class="text-4xl p-2 mb-2 border-b">{{folder.name}}</h1>
            {{/if}}
            {{#if snippets}}
            <ul class="flex flex-wrap">
            {{#each snippets}}
                <li class="w-1/2 sm:w-3/6 md:w-2/6 lg:w-1/5">
                    <a href="/snippet/{{this.id}}" class="block text-center p-2 m-1 sm:p-4 md:m-2 border border-solid border-gray-400">
                        <i class="block fas fa-file-code fa-3x text-blue-600 py-2"></i>
                        <h2 class="py-2">{{this.title}}</h2>
                        <p class="pb-1 text-xs">{{#if this.language}}{{this.language}}
                            {{else}}Unspecified{{/if}}</p>
                    </a>
                </li>
            {{/each}}
            </ul>
            {{else}}
            <p class="my-6 text-2xl text-center">This folder is empty</p>
            {{/if}}
        </section>
    </div>
</main>
